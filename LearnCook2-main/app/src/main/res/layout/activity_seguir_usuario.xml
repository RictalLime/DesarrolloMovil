<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FCFFDF"
    tools:context=".SeguirUsuarioActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/display"
        android:text="Seguir Amigos"
        android:textColor="#021D3D"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <EditText
            android:id="@+id/nombre_usuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Nombre de Usuario"
            android:fontFamily="@font/roboto"
            android:inputType="textCapWords|textAutoComplete"
            android:padding="10dp"
            android:textColor="#000000"
        android:textColorHint="#000000"
            android:background="@drawable/rounded_edittext"/>

        <Button
            android:id="@+id/btn_buscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:textSize="20sp"
            android:fontFamily="@font/roboto"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" >

            <TextView
                android:id="@+id/usernameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre de Usuario"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:gravity="center_horizontal"/> <!-- Alinea el texto al centro horizontal -->

            <!-- BotÃ³n Seguir -->
            <Button
                android:id="@+id/seguirButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seguir"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>